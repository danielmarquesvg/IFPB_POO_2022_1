#include "FiguraGeometrica.h"

#include <string>
using namespace std;

FiguraGeometrica::FiguraGeometrica(string novoNome, double novoTamanhoDoLado, double novaQuantidadeDeLados) {
	this->nome = novoNome;
	this->tamanhoDoLado = novoTamanhoDoLado;
	this->quantidadeDeLados = quantidadeDeLados;
}

double FiguraGeometrica::calcularPerimetro(double tamanhoDoLado, double quantidadeDeLados){
	double perimetro = tamanhoDoLado * quantidadeDeLados;
	return perimetro;
}

double FiguraGeometrica::calcularArea(double tamanhoDoLado, double quantidadeDeLados){
	double area = tamanhoDoLado * tamanhoDoLado;
	return area;
}
